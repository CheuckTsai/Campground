<% layout('layouts/boilerplate')%>

    <body>
        <h1 class="mb-3">All campgrounds</h1>
        <div><a class="btn btn-sm btn-primary" href="/campgrounds/new"><strong>Add your own campground now!</strong></a></div>
        <div id='cluster-map' style="width:100%; height:400px"></div>
        <p></p>
        <% for (let campground of campgrounds){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images.length) {%>
                            <img src="<%= campground.images[0].url%>" class="img-fluid rounded">
                            <% } else {%>
                                <img src="https://res.cloudinary.com/tsai-li/image/upload/v1629878136/YelpCamp/w3tntwopgfwxuzgpkhkd.jpg"
                                    class="img-fluid rounded">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title%>
                            </h5>
                            <small class="text-muted">
                                <%= campground.location%>
                            </small>
                            <p class="card-text">
                                <%= campground.description%>
                            </p>
                            <a class="btn btn-sm btn-primary" href="/campgrounds/<%= campground._id%>">View more about <%=
                                    campground.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </body>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
        const campgrounds = { features: <%-JSON.stringify(campgrounds)%>}
    </script>
    <script src='/javascripts/clusterMap.js'></script>